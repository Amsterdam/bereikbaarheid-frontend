{
  "name": "bereikbaarheid-frontend",
  "version": "3.0.0",
  "private": true,
  "dependencies": {
    "@amsterdam/arm-core": "^1.0.0",
    "@amsterdam/arm-nontiled": "^1.0.0",
    "@amsterdam/asc-assets": "^0.38.0",
    "@amsterdam/asc-ui": "^0.38.0",
    "@amsterdam/react-maps": "^1.1.1",
    "@hookform/resolvers": "^3.3.1",
    "@piwikpro/react-piwik-pro": "^1.2.1",
    "@react-spring/web": "^9.7.3",
    "@tanstack/react-query": "^4.35.3",
    "@tanstack/react-query-devtools": "^4.35.3",
    "axios": "^1.5",
    "date-fns": "^2.30.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "leaflet.nontiledlayer": "^1.0.9",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.46.2",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.11",
    "typescript": "^4.9.5",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/geojson": "^7946.0.11",
    "@types/jest": "^28.1.8",
    "@types/leaflet": "^1.9.4",
    "@types/leaflet.markercluster": "^1.5.2",
    "@types/lodash": "^4.14.198",
    "@types/node": "^18.17.18",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/styled-components": "^5.1.27",
    "@types/testing-library__react": "^10.2.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "jest-canvas-mock": "^2.5.2",
    "lint-staged": "^14.0.1",
    "mq-polyfill": "^1.1.8",
    "msw": "^1.3.1",
    "prettier": "^2.8.8"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "GENERATE_SOURCEMAP=false react-scripts start",
    "lint": "eslint --cache .",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\" --watchAll=false --passWithNoTests",
    "test:staged": "react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\" --watchAll=false --bail --findRelatedTests",
    "test:watch": "react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-unused-modules": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "builtin",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "builtin"
          ],
          "warnOnUnassignedImports": true
        }
      ],
      "nonblock-statement-body-position": "error"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
