{
  "name": "bereikbaarheid-frontend",
  "version": "3.2.0",
  "private": true,
  "engines": {
    "node": ">=18.19 <19",
    "npm": ">=9.6"
  },
  "scripts": {
    "clean": "rm -Rf build node_modules .yarn .eslintcache",
    "prepare": "husky install",
    "start": "BROWSER=none react-scripts start",
    "lint": "eslint --cache . && prettier --write --ignore-unknown .",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "NODE_ENV=test react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\" --watchAll=false --passWithNoTests",
    "test:update": "NODE_ENV=test react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\" --watchAll=false --passWithNoTests --updateSnapshot",
    "test:staged": "NODE_ENV=test react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\" --watchAll=false --bail --findRelatedTests",
    "test:watch": "NODE_ENV=test react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@amsterdam/arm-core": "^1.0.0",
    "@amsterdam/arm-nontiled": "^1.0.0",
    "@amsterdam/asc-assets": "^0.38.0",
    "@amsterdam/asc-ui": "^0.38.0",
    "@amsterdam/react-maps": "^1.1.1",
    "@hookform/resolvers": "^3.3.4",
    "@piwikpro/react-piwik-pro": "^1.3.3",
    "@react-spring/web": "^9.7.3",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-query-devtools": "^4.36.1",
    "axios": "^1.6",
    "date-fns": "^2.30.0",
    "html-react-parser": "^5.1.10",
    "i18next": "^23.11.2",
    "i18next-browser-languagedetector": "^7.2.1",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "leaflet.nontiledlayer": "^1.0.9",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.51.3",
    "react-i18next": "^13.5.0",
    "react-router": "^6.23.0",
    "react-router-dom": "^6.23.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^5.3.11",
    "typescript": "^4.9.5",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8",
    "@types/geojson": "^7946.0.14",
    "@types/jest": "^28.1.8",
    "@types/leaflet": "^1.9.12",
    "@types/leaflet.markercluster": "^1.5.4",
    "@types/lodash": "^4.17.0",
    "@types/node": "^18.19.31",
    "@types/react-is": "^18",
    "@types/styled-components": "^5.1.34",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "jest-canvas-mock": "^2.5.2",
    "lint-staged": "^14.0.1",
    "mq-polyfill": "^1.1.8",
    "msw": "^1.3.3",
    "prettier": "^2.8.8",
    "react-is": "^18.2.0"
  },
  "peerDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "*",
    "@babel/plugin-transform-private-property-in-object": "*",
    "@testing-library/dom": "*"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jest-dom/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.test.*"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "plugins": [
      "import",
      "jest-dom",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-unused-modules": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "builtin",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "builtin"
          ],
          "warnOnUnassignedImports": true
        }
      ],
      "nonblock-statement-body-position": "error"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{json,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
